<p id="notice"><%= notice %></p>

<h1>Expenses</h1>
<p><b>Count:</b> <%= @expenses.length %></p>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Employee</th>
      <th>Amount</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.sort_by{|e| [e.project.name, e.employee.email, -e.amount]}.each do |expense| %>
      <tr>
        <td><%= link_to expense.project.name, expense.project %></td>
        <td><%= expense.employee.email %></td>
        <td><%= number_to_currency (expense.amount.to_f / 100) %></td>
        <td><%= link_to expense.description, expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Expense', new_expense_path %>
